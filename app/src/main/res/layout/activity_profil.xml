<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profil">

    <com.github.florent37.shapeofview.shapes.RoundRectView
    android:layout_width="match_parent"
    android:layout_height="138dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.454"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0"
    app:roundRect_bottomLeftDiameter="80dp"
    app:roundRect_bottomRightDiameter="80dp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bctool"/>

</com.github.florent37.shapeofview.shapes.RoundRectView>

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/roundRectView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/profil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152"
        app:roundRect_bottomLeftDiameter="10dp"
        app:roundRect_bottomRightDiameter="10dp"
        app:roundRect_topLeftDiameter="10dp"
        app:roundRect_topRightDiameter="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/boy" />
    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:padding="5dp"
        android:text="نام کاربر"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.327" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="320dp"
        android:layout_height="285dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="8dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63">

        <TextView
            android:id="@+id/txtP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:text="پرونده سلامت"
            android:textColor="#de189f"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.36" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e4d8d8"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="60dp"/>


        <ImageView
            android:id="@+id/age_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/age_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="43dp"
            android:padding="3dp"
            android:text="سن"
            android:textAlignment="center"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/age_select"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/age_txt"
            android:padding="3dp"
            android:text="انتخاب کنید"
            android:textAlignment="center"
            android:textColor="#de189f"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginTop="135dp"
            android:layout_marginLeft="15dp"/>

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="215dp"
            android:background="#e4d8d8"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="60dp"/>



        <ImageView
            android:id="@+id/gender_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="150dp"
            android:src="@drawable/ic_genders" />

        <TextView
            android:id="@+id/gender_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="140dp"
            android:padding="3dp"
            android:text="جنسیت"
            android:textAlignment="center"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender_txt"
            android:id="@+id/gender_select"
            android:entries="@array/android_dropdown_array"
            android:gravity="center"
            android:textDirection="rtl"
            android:textAlignment="center"
            android:textColor="#de189f"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginTop="135dp"
            android:layout_marginLeft="120dp"/>
        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="215dp"
            android:background="#e4d8d8"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="60dp"/>
        <ImageView
            android:id="@+id/weight_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="250dp"
            android:src="@drawable/ic_weight" />

        <TextView
            android:id="@+id/weight_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="252dp"
            android:padding="3dp"
            android:text="وزن"
            android:textAlignment="center"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/weight_select"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender_txt"
            android:padding="3dp"
            android:text="انتخاب کنید"
            android:textAlignment="center"
            android:textColor="#de189f"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginTop="135dp"
            android:layout_marginLeft="230dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e4d8d8"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="170dp"/>
        <ImageView
            android:id="@+id/blood_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/ic_blood" />

        <TextView
            android:id="@+id/blood_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="30dp"
            android:padding="3dp"
            android:text="گروه خونی"
            android:textAlignment="center"
            android:textSize="12dp"
            android:textStyle="bold" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender_txt"
            android:id="@+id/blood_select"
            android:entries="@array/android_dropdown_array"
            android:gravity="center"
            android:textDirection="rtl"
            android:textAlignment="center"
            android:textColor="#de189f"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="20dp"/>


        <ImageView
            android:id="@+id/height_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="150dp"
            android:src="@drawable/ic_height" />

        <TextView
            android:id="@+id/height_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="160dp"
            android:padding="3dp"
            android:text="قد"
            android:textAlignment="center"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/height_select"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender_txt"
            android:padding="3dp"
            android:text="انتخاب کنید"
            android:textAlignment="center"
            android:textColor="#de189f"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="130dp"/>


        <ImageView
            android:id="@+id/heartbeat_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="250dp"
            android:src="@drawable/ic_heartbeat" />

        <TextView
            android:id="@+id/heartbeat_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="240dp"
            android:padding="3dp"
            android:text="درصد سلامت"
            android:textAlignment="center"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/heartbeat_select"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender_txt"
            android:padding="3dp"
            android:text="محاسبه"
            android:textAlignment="center"
            android:textColor="#de189f"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="230dp"/>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>