<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Index">

    <com.mxn.soul.flowingdrawer_core.FlowingDrawer
        android:id="@+id/flowingdrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:edMenuBackground="#00ffffff"
        app:edMenuSize="220dp"
        app:edPosition="4"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="31dp">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/img_view"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/signs"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/shopping" />

                <TextView
                    android:id="@+id/txtMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="85dp"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="@string/main"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />
            </android.support.v7.widget.Toolbar>
            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:id="@+id/nadaram"
                android:layout_width="140dp"
                android:layout_height="180dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/img_main"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.300"
                app:roundRect_bottomLeftDiameter="10dp"
                app:roundRect_bottomRightDiameter="10dp"
                app:roundRect_topLeftDiameter="10dp"
                app:roundRect_topRightDiameter="10dp">


                <ImageView
                    android:id="@+id/imgNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/anime2" />

                <TextView
                    android:id="@+id/no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="55dp"
                    android:padding="5dp"
                    android:text="نسخه ندارم"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    />
            </com.github.florent37.shapeofview.shapes.RoundRectView>

            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:id="@+id/daram"
                android:layout_width="140dp"
                android:layout_height="180dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.813"
                app:roundRect_bottomLeftDiameter="10dp"
                app:roundRect_bottomRightDiameter="10dp"
                app:roundRect_topLeftDiameter="10dp"
                app:roundRect_topRightDiameter="10dp"
                android:background="@drawable/img2_main">



                <ImageView
                    android:id="@+id/imgYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/anime"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="55dp"
                    android:padding="5dp"
                    android:text="نسخه دارم"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

            </com.github.florent37.shapeofview.shapes.RoundRectView>
            <!--<android.support.v7.widget.Toolbar-->
            <!--android:id="@+id/toolbar"-->
            <!--android:layout_width="100dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="right"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:layout_marginRight="30dp">-->

            <!--</android.support.v7.widget.Toolbar>-->

        </android.support.constraint.ConstraintLayout>


        <com.mxn.soul.flowingdrawer_core.FlowingMenuLayout
            android:id="@+id/menulayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.design.widget.NavigationView
                android:id="@+id/navigation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ovalnav"
                android:layoutDirection="rtl"
                app:headerLayout="@layout/header_layout"
                app:itemIconTint="#fff"
                app:itemTextColor="#fff"
                app:menu="@menu/menu_item" />


        </com.mxn.soul.flowingdrawer_core.FlowingMenuLayout>

    </com.mxn.soul.flowingdrawer_core.FlowingDrawer>
</android.support.constraint.ConstraintLayout>