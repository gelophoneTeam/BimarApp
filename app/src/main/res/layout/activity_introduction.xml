<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Introduction">
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <steelkiwi.com.library.view.IndicatorView
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        app:iv_bar_color="#fff"
        app:iv_corner_radius="50dp"
        app:iv_idle_color="#ffc3e2"
        app:iv_item_amount="4"
        app:iv_select_color="#9375a6"
        app:iv_text_color="#ffc3e2"
        app:layout_constraintBottom_toBottomOf="@+id/view_pager" />

</android.support.constraint.ConstraintLayout>